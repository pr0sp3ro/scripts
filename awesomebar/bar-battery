#!/bin/sh

for battery in /sys/class/power_supply/BAT?*; do
	[ -n "${capacity+x}" ] && printf " "
	capacity=$(/usr/bin/cat "$battery/capacity")
	[ "$capacity" -le 20 ] && warn="‚ùó" && notify-send -u critical "Low battery!" "$capacity%"
	printf "Bat: %s%d%%" "$warn" "$capacity"; unset warn
done && exit 0
